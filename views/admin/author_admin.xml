<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="author_action" model="ir.actions.act_window">
    <field name="name">author</field>
    <field name="res_model">library_system.author</field>
    <field name="view_mode">tree,form</field>
  </record>

  <record id="ls_author_view_tree" model="ir.ui.view">
    <field name="name">author</field>
    <field name="model">library_system.author</field>
    <field name="arch" type="xml">
      <tree string="author">
        <field name="author_name"></field>
      </tree>
    </field>
  </record>

  <record id="ls_author_view_form" model="ir.ui.view">
    <field name="name">library_system.author.view.form</field>
    <field name="model">library_system.author</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="author_id"></field>
            <field name="author_name"></field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

</odoo>